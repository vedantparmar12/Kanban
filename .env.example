# Database
DATABASE_URL=postgresql://username:password@localhost:5432/kanban_db

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# OpenRouter / OpenAI
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://yoursite.com
OPENAI_MODEL=gryphe/mythomax-l2-13b
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# MCP Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_API_KEY=your-mcp-api-key
MCP_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_DELAY=1000

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Kanban API Integration (for MCP server)
KANBAN_API_URL=http://localhost:3000/api
KANBAN_API_TOKEN=kanban-api-token

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis Configuration
REDIS_PREFIX=kanban:
REDIS_TTL=3600

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
ENABLE_PR_AGENT=true
ENABLE_DOC_GENERATOR=true
ENABLE_ANALYTICS=true