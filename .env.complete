# ===================================
# CORE DATABASE CONFIGURATION
# ===================================



# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=kanban:
REDIS_TTL=3600

# ===================================
# AUTHENTICATION & SECURITY
# ===================================

# JWT Configuration
JWT_SECRET=your-very-secure-secret-key-change-this-in-production-minimum-32-chars
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Password Hashing
BCRYPT_ROUNDS=10

# Session Configuration
SESSION_SECRET=another-secret-key-for-sessions-change-in-production
SESSION_MAX_AGE=86400000

# ===================================
# EXTERNAL INTEGRATIONS
# ===================================

# GitHub Integration (Required for PR features)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_for_github_webhooks
GITHUB_API_URL=https://api.github.com

# OpenRouter / OpenAI Configuration (Required for AI/RAG features)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://yoursite.com
OPENAI_MODEL=gryphe/mythomax-l2-13b
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_API_KEY=mcp-secret-key-for-internal-communication
MCP_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_DELAY=1000
REPO_PATH=/app/repos

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.md

# ===================================
# EMAIL CONFIGURATION (Optional)
# ===================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@kanban-app.com

# ===================================
# MONITORING & LOGGING
# ===================================

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_DEBUG_MODE=true

# ===================================
# FEATURE FLAGS
# ===================================

ENABLE_PR_AGENT=true
ENABLE_DOC_GENERATOR=true
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKET=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false

# ===================================
# RATE LIMITING
# ===================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# SEARCH & AI CONFIGURATION
# ===================================

# Search Configuration
SEARCH_RESULT_LIMIT=20
SEMANTIC_SEARCH_THRESHOLD=0.7

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# ===================================
# CACHE CONFIGURATION
# ===================================

CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER=1800
CACHE_TTL_BOARD=3600
CACHE_TTL_TASK=1800

# ===================================
# BACKGROUND JOBS
# ===================================

JOB_CONCURRENCY=5
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=5000

# ===================================
# SECURITY HEADERS
# ===================================

HELMET_CSP_DIRECTIVES=default-src 'self'
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ===================================
# PERFORMANCE CONFIGURATION
# ===================================

COMPRESSION_LEVEL=6
BODY_PARSER_LIMIT=10mb
REQUEST_TIMEOUT=30000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
DB_LOGGING=false
DB_SSL=false

# ===================================
# EXTERNAL SERVICE INTEGRATIONS (Optional)
# ===================================

# Slack Integration
SLACK_WEBHOOK_URL=

# Discord Integration
DISCORD_WEBHOOK_URL=

# Jira Integration
JIRA_API_TOKEN=
JIRA_DOMAIN=

# Bitbucket Integration
BITBUCKET_API_TOKEN=

# GitLab Integration
GITLAB_API_TOKEN=

# ===================================
# ANALYTICS (Optional)
# ===================================

GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# ===================================
# WEBHOOK CONFIGURATION
# ===================================

WEBHOOK_SECRET=webhook-secret-for-external-integrations
WEBHOOK_TIMEOUT=10000

# ===================================
# BACKUP CONFIGURATION
# ===================================

BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ===================================
# PRODUCTION CONFIGURATION (Optional)
# ===================================

# Custom Domain
DOMAIN=

# SSL Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=

# CDN Configuration
CDN_URL=
CDN_PREFIX=

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# ===================================
# LOCALIZATION
# ===================================

# Timezone
TZ=UTC

# Locale Configuration
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE,ja-JP,zh-CN